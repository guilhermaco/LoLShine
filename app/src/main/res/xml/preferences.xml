<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_summoner_name"
        android:key="@string/pref_summoner_name_key"
        android:defaultValue="@string/pref_summoner_name_default"
        android:inputType="text"
        android:singleLine="true"/>
    <ListPreference
        android:title="@string/pref_region"
        android:key="@string/pref_region_key"
        android:entries="@array/pref_region_options"
        android:entryValues="@array/pref_region_options_values"
        android:defaultValue="@string/pref_region_default"/>
</PreferenceScreen>